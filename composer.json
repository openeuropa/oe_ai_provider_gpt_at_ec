{
    "name": "openeuropa/oe_ai_provider_gpt_at_ec",
    "description": "Enables the use of GPT@EC as provider for the AI module.",
    "type": "drupal-module",
    "license": "EUPL-1.2",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "git",
            "url": "git@github.com:openeuropa/gpt-at-ec-php-client.git"
        }
    ],
    "require": {
        "drupal/ai": "^1.1",
        "drupal/key": "^1.20",
        "openeuropa/gpt-at-ec-php-client": "~1.0.0-beta1"
    },
    "require-dev": {
        "drush/drush": "^12 || ^13"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": false,
            "tbachert/spi": false
        }
    }
}
