{
    "name": "openeuropa/oe_ai_provider_gpt_at_ec",
    "description": "Enables the use of GPT@EC as provider for the AI module.",
    "type": "drupal-module",
    "license": "EUPL-1.2",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "drupal/ai": "^1.1",
        "drupal/key": "^1.20"
    },
    "require-dev": {
        "drush/drush": "^12 || ^13",
        "openai-php/client": ">=v0.10.1"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": false,
            "tbachert/spi": false
        }
    }
}
